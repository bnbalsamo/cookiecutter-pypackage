# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix style newlines
# Trim trailing whitespace
# UTF-8 for everything
[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
